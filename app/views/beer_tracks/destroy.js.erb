<% case @from %>
<% when "bars_page"%>
  $('a.action_link').hide();
  $("#beer_tracker_form_<%= @beer_item.id %>").html("<%= escape_javascript(render(:partial => 'bars/track_it', :locals => { :item => @beer_item })) %>");
<% when "beers_index"%>
  $("div#beer-tracking-<%= @beer.id %>").html("<%= escape_javascript(render(:partial => 'beers/track_it', :locals => { :beer => @beer })) %>");
<% end %>
$("span#user-stats").html("<%= escape_javascript(render "/layouts/user_stats") %>");