<h2>Latest Additions</h2>
<table id="expanding_beer_item_list" class="itemlist">
<thead>
  <tr>
    <th width=200>Beer</th>
    <th width=200>Bar</th>
    <th width=150><%= sortable "volume", "Pouring" %></th>
    <th width=100><%= sortable "price" %></th>
    <th width=50></th>
    <th width=50></th>
    <th width=50></th>
  </tr>
</thead>
<tbody>
<% @beer_items.each do |beer_item| %>
  <tr>
    <td><%= link_to beer_item.beer.name, beer_item.beer %></td>
    <td><%= link_to beer_item.bar.name, beer_item.bar %></td>
    <% unless (beer_item.volume.nil? || beer_item.volunit.nil?) %>
    <td><%= number_to_human(beer_item.volume, :units => {:unit => beer_item.volunit}) %> <%= beer_item.pouring %></td>
    <% else %>
    <td><%= beer_item.pouring %></td>
    <% end %>
    <td><%= number_to_currency(beer_item.price) %></td>
	<% if beer_item.bar.has_permission?(current_user) %>
		<td><%= link_to 'Edit', edit_beer_item_path(beer_item) %></td>
	    <td><%= link_to 'Destroy', beer_item, :confirm => 'Are you sure?', :method => :delete %></td>
	<% else %>
		<td />
		<td />
	<% end %>
  </tr>
  <!--
  <tr>
  	<td colspan="4" id="itemdesc-<%= beer_item.id %>" class="itemdesc">
  		<p></p>
  	</td>
  </tr>-->
<% end %>
</tbody>
</table>

