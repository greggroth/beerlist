<%= form_for(@beer_item) do |f| %>
  <% if @beer_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= error_messages_for @beer_item, :header_message => "Whoops!", :message => "Please address the following:"%></h2>
    </div>
  <% end %>

  <div class="field">
     <%= f.label "Beer Name" %><br />
     <%= collection_select :beer_item, :beer_id, Beer.order('name ASC'), :id, :name %>
  </div>
 
  <div class="field">
     <%= f.label :name %><br />
     <%= collection_select :beer_item, :bar_id, current_user.admin_bars, :id, :name %><br />
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>
