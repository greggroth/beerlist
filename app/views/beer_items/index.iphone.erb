<div id="beer_items_index">
  <div class="toolbar">
		<%= render "login_or_logout" %>
    <h1>Home</h1>
  </div>
	
	<% unless flash.empty? %>
    <div class="info">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    </div>
  <% end %>
	<h2><%= current_user.email if user_signed_in? %></h2>
	
	<ul class="rounded">
		<li class="arrow"><a class="button_bars_index">Bars</a></li>
		<li class="arrow"><a class="button_beers_index">Beers</a></li>
	</ul>


	<h2>Best Deals</h2>
		<ul class="rounded">
		  <% for beer_item in @best_deals %>
		    <li class="arrow">
		      <!-- <%= link_to beer_item.beer.name, beer_path(beer_item.beer.id) %> -->
					<a class="button_beer_items_show" data-bi-id="<%= beer_item.id %>"><%= beer_item.beer.name %></a>
					<small class="counter"><%= sprintf("%.3f",beer_item.abd) %></small>
		    </li>
		  <% end %>
		</ul>

	<!-- <ul><li class="arrow"><%= link_to "New Item", new_beer_item_path %></li></ul> -->
</div>

