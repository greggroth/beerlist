<%= form_for(@bar) do |f| %>
  <% if @bar.errors.any? %>
    <div id="error_explanation">
      <h2><%= error_messages_for @bar, :header_message => "Whoops!", :message => "Please address the following:"%></h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
     <%= f.label "Address" %><br />
     <%= f.text_field :address %>
  </div>

  <div class="field">
     <%= f.label "City" %><br />
     <%= f.text_field :city %>
  </div>

  <div class="field">
     <%= f.label "State" %><br />
     <%= f.text_field :state %>
  </div>
  
  <div class="field">
     <%= f.label "Zip" %><br />
     <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
