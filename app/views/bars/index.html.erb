<h1>Bars</h1>

<table>
  <tr align="left">
    <th width=150>Name</th>
	<th width=200>Address</th>
    <th width=100>Zip</th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= link_to bar.name, bar %></td>
	<td><%= bar.address %></td>
    <td><%= bar.zip %></td>
	<% if bar.has_permission? current_user %>
		<span class="actions">
		    <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
		    <td><%= link_to 'Destroy', bar, :confirm => 'Are you sure?', :method => :delete %></td>
		</span>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bar', new_bar_path %>

