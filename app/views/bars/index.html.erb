<h1>Bars</h1>

<p>Sort by location:</p>
<div class="search">
<%= form_tag bars_path, :method => :get do %>
  <p>
		<%= label_tag "Zip:"%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Sort", :name => nil %>
  </p>
<% end %>
</div>

<p>Hint:  Click on a row to view the beer list for a bar!</p>

<div class="greenLine"></div>

<div id="bar_list">
	<%= render 'list' %>
</div>

<%= link_to 'New Bar', new_bar_path %>
<br>
<%= paginate @bars %>
