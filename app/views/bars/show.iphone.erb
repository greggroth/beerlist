<h1><%= @bar.name %></h1>

<h3> Pouring <%= pluralize(@bar.beers.count, "beer") %> </h3> <br />

<p>
  <p><%= @bar.address %></p>
  <p><%= @bar.city %> <%= @bar.state %></p>
  <p><%= @bar.zip %></p>
</p>


<p>
  <b>Description:</b>
  <%= @bar.description %>
</p>

<div id="itemlist">
<table>
  <tr>
    <th width=150>Name</th>
	<th width=300>Brewery</th>
    <th width=100>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beer_items.each do |item| %>
  <tr>
    <td><%= link_to item.beer.name, item.beer %></td>
	<td><%= link_to item.beer.brewery.name, item.beer.brewery %></td>
    <td><%= number_to_currency(item.price) %></td>
   <% if logged_in? && @bar.has_permission?(current_user) %>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_beer_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
   <% end %>
  </tr>
<% end %>
</table>
</div>

<% if @bar.has_permission? current_user %>
	<%= link_to 'Edit', edit_bar_path(@bar) %> |
<% end %>
<%= link_to 'Back', :back %>
