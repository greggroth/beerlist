<h1><%= @brewery.name %></h1>

<h3>Brewing <%= pluralize(@brewery.beers.length, "beer") %></h3> <br />

<p>
	<%= @brewery.address %><br>
	<%= @brewery.city %> <%= @brewery.state %><br>
	<%= @brewery.zip %><br>
	<%= !@brewery.url.nil? ? link_to("Website", @brewery.url) : "" %>
</p>

<br />
<div class="greenLine" />

<div class="itemlist">
<table>
<thead>
  <tr>
    <th width=200>Beer</th>
		<th width=200>Style</th>
		<th width=80>ABV</th>
		<th width=80>Pouring at...</th>
  </tr>
</thead>
<tbody>
<% @beers.each do |beer| %>
	<tr>
		<td><%= link_to beer.name, beer %></td>
		<td><%= beer.try(:style) ? beer.style.name : "" %></td>
		<td><%= number_to_percentage beer.abv, :precision => 1 %></td>
		<td><%= pluralize(beer.bars.count, "bar") %></td>
  </tr>
</tr>
<% end %>
</tbody>
</table>
</div>

<br>
<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', :back %>
