<h1>Breweries</h1>

<table>
  <tr align="left">
    <th width=250>Name</th>
	<th width=250>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @breweries.each do |brewery| %>
  <tr>
    <td><%= link_to brewery.name, brewery %></td>
   <% if brewery.citystate %>
    <td><%= brewery.citystate %></td>
   <% else %>
    <td></td>
   <% end %>
   <% if logged_in? && current_user.id == 1 %>
    <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
    <td><%= link_to 'Destroy', brewery, :confirm => 'Are you sure?', :method => :delete %></td>
   <% end %>
  </tr>
<% end %>
</table>

<br />
<div align="left"><%= link_to 'New Brewery', new_brewery_path %></div>


