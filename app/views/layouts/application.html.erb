<!DOCTYPE html>
<html>
<head>
  <title>Atlanta Beer List</title>

  <%= stylesheet_link_tag "application.css", "jquery.jqplot.min.css", "ui-lightness/jquery-ui-1.8.15.custom.css" %>
  <%= javascript_include_tag "jquery.min.js" %>
  <%= javascript_include_tag "script.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.16.custom.min.js" %>
  <%= javascript_include_tag "jquery.jqplot.js" %>
  <%= javascript_include_tag "jqplot_plugins/jqplot.dateAxisRenderer.min.js" %>
  <%= javascript_include_tag "jquery.metadata.js" %>
	<%= javascript_include_tag "gmaps4rails/gmaps4rails.base.js" %>
	<%= javascript_include_tag "gmaps4rails/gmaps4rails.googlemaps.js" %>
	<%= javascript_include_tag "gmaps4rails/gmaps4rails.bing.js" %>
	<%= javascript_include_tag "gmaps4rails/gmaps4rails.mapquest.js" %>
	<%= javascript_include_tag "gmaps4rails/gmaps4rails.openlayers.js" %>
	<%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-25428237-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>

  <%= yield :head %>
</head>
<body>

 <div id="header">
   <h1><%= link_to "ABL", root_path %><span id="beta">beta</span> </h1>
    <div id="user_bar">
     <ul>
		<li><%= link_to "Beers", beers_path %></li>
		<li>-</li>
		<li><%= link_to "Bars", bars_path %></li>
		<li>-</li>
		<li><%= link_to "Breweries", breweries_path %></li>
		<li>|</li>
      <% if user_signed_in? %>	
		   	<% unless current_user.admin_bars.empty? %>      
					<li><%= link_to "Manage Bars", bar_owner_path %></li>
					<li>|</li>
			 <% end %>
					<li>Welcome, <%= current_user.email %> (<%= link_to "Logout", destroy_user_session_path, :id=>'logout', :method => :delete %>)</li>
      <% else %>
		 		<% if signup_allowed? %>
					<li><%= link_to "Signup", new_user_registration_path %></li>
					<li>|</li>
				<% else %>
					<li>Beta Testing Full</li>
					<li>|</li>
				<% end %>
        <li><%= link_to "Login", new_user_session_path %></li>
      <% end %>
     </ul>
    </div>
 </div>

<!-- <%= image_tag "comingsoon_eav.png", :id => "announcement-image" %> -->

 <div id="main">
 	<% if iphone_user_agent? %>
 		<div id="iphone-message">
			Using an iPhone? <a href="http://iphone.atlbeerlist.com/">Use the optimized version</a>.
		</div>
	<% end %>

    <%= content_tag(:p, raw(notice), :class => 'notice') if notice.present? %>
    <%= content_tag(:p, alert, :class => 'alert') if alert.present? %>
		<br />
    <%= yield %>

  </div>
  <div id="footer">
    <%= yield :scripts %>
    Atlanta Beer List:  Your Place for Beer Prices
  </div>

</body>
</html>
